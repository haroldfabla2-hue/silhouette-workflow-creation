# =============================================================================
# CONFIGURACIÓN DE ENTORNO - SILHOUETTE WORKFLOW CREATION
# =============================================================================
# Copia este archivo a .env y configura los valores según tu entorno

# =============================================================================
# CONFIGURACIÓN BÁSICA DEL SERVIDOR
# =============================================================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =============================================================================
# SQLite (por defecto) - No requiere configuración adicional
# DATABASE_TYPE=sqlite
# DATABASE_PATH=./silhouette.db

# PostgreSQL (opcional)
# DATABASE_TYPE=postgresql
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_USERNAME=your_db_user
# DATABASE_PASSWORD=your_db_password
# DATABASE_NAME=silhouette_db

# =============================================================================
# CONFIGURACIÓN DE AUTENTICACIÓN Y SEGURIDAD
# =============================================================================
# CLAVE SECRETA JWT (¡IMPORTANTE! Cámbiala en producción)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# ENCRYPTION KEY para credenciales (si usas encriptación)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# =============================================================================
# CONFIGURACIÓN SMTP PARA INVITACIONES DE USUARIOS
# =============================================================================
# SMTP es opcional para invitaciones manuales, pero requerido para resets de password

# Modo de email (smtp para Gmail, SendGrid, etc.)
N8N_EMAIL_MODE=smtp

# Servidor SMTP
N8N_SMTP_HOST=smtp.gmail.com
N8N_SMTP_PORT=465
N8N_SMTP_SSL=true

# Credenciales SMTP
N8N_SMTP_USER=your-email@gmail.com
N8N_SMTP_PASS=your-app-password

# Remitente de emails
N8N_SMTP_SENDER=Silhouette <your-email@gmail.com>

# =============================================================================
# CONFIGURACIÓN DE CORS
# =============================================================================
# URLs permitidas para CORS (separadas por comas)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# CONFIGURACIÓN DE REDIS (OPCIONAL)
# =============================================================================
# Para cache y sesiones
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# =============================================================================
# CONFIGURACIÓN DE RABBITMQ (OPCIONAL)
# =============================================================================
# Para colas de tareas
RABBITMQ_URL=amqp://localhost
RABBITMQ_USER=your_rabbitmq_user
RABBITMQ_PASSWORD=your_rabbitmq_password

# =============================================================================
# CONFIGURACIÓN DE NEO4J (OPCIONAL)
# =============================================================================
# Para grafos de workflows
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# =============================================================================
# CONFIGURACIÓN DE API KEYS (OPCIONAL)
# =============================================================================
# APIs externas para funcionalidades avanzadas

# OpenAI API
# OPENAI_API_KEY=sk-your-openai-api-key

# Runway AI API (para generación de video)
# RUNWAY_API_KEY=your-runway-api-key

# Pika Labs API (para generación de video)
# PIKA_API_KEY=your-pika-api-key

# Luma AI API (para generación de video)
# LUMA_API_KEY=your-luma-api-key

# Unsplash API (para imágenes)
# UNSPLASH_API_KEY=your-unsplash-api-key

# Pexels API (para imágenes)
# PEXELS_API_KEY=your-pexels-api-key

# =============================================================================
# CONFIGURACIÓN DE LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FILE=./logs/silhouette.log

# =============================================================================
# CONFIGURACIÓN DE RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100  # máximo 100 requests por ventana

# =============================================================================
# CONFIGURACIÓN DE FRAMEWORK V4.0
# =============================================================================
# Habilitar Framework V4.0
FRAMEWORK_V4_ENABLED=true

# Configuraciones específicas del Framework V4.0
FRAMEWORK_V4_MAX_CONCURRENT_TASKS=10
FRAMEWORK_V4_TASK_TIMEOUT=300000  # 5 minutos

# =============================================================================
# CONFIGURACIÓN DE GRAFANA (OPCIONAL)
# =============================================================================
# Para monitoreo y métricas
GRAFANA_URL=http://localhost:3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# =============================================================================
# CONFIGURACIÓN DE POSTGRESQL PARA SERVICIOS (SI LA USAS)
# =============================================================================
# Solo si usas PostgreSQL en lugar de SQLite para algunos servicios
POSTGRES_USER=haas
POSTGRES_PASSWORD=haaspass
POSTGRES_DB=haasdb
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================================================
# CONFIGURACIÓN DE DOCKER (SI USAS DOCKER)
# =============================================================================
# Para despliegues en Docker
DOCKER_NETWORK=silhouette-network
CONTAINER_PREFIX=silhouette

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================
# Solo para desarrollo - NO usar en producción
DEBUG_AUTH=true
DEBUG_DATABASE=true
DEBUG_WEBSOCKETS=true

# =============================================================================
# NOTAS IMPORTANTES
# =============================================================================
# 1. CAMBIA TODAS LAS CONTRASEÑAS Y KEYS EN PRODUCCIÓN
# 2. NUNCA committear el archivo .env al repositorio
# 3. Usa variables de entorno en producción
# 4. Configura HTTPS en producción
# 5. El primer usuario registrado se convertirá automáticamente en Owner
# 6. Solo Owners pueden invitar nuevos usuarios después del setup inicial
# =============================================================================