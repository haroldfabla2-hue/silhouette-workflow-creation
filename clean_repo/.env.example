# ===========================================
# SILHOUETTE WORKFLOW CREATION PLATFORM
# Archivo de configuración de variables de entorno
# ===========================================

# ===========================================
# APLICACIÓN
# ===========================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# ===========================================
# BASE DE DATOS
# ===========================================
# Para desarrollo (SQLite)
DATABASE_PATH=./data/silhouette.db

# Para producción (PostgreSQL) - Descomenta y configura
# DATABASE_TYPE=postgres
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=silhouette
# DATABASE_USER=silhouette
# DATABASE_PASSWORD=tu_password_seguro

# ===========================================
# JWT Y SEGURIDAD
# ===========================================
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui_cambiar_en_produccion
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=12

# ===========================================
# CREDENCIALES DE API (Ejemplos - Reemplazar con reales)
# ===========================================
# OpenAI para generación de imágenes
# OPENAI_API_KEY=sk-tu-clave-openai

# AWS para servicios cloud
# AWS_ACCESS_KEY_ID=tu_aws_access_key
# AWS_SECRET_ACCESS_KEY=tu_aws_secret_key
# AWS_REGION=us-east-1

# Slack para notificaciones
# SLACK_BOT_TOKEN=xoxb-tu-slack-bot-token
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/tu/webhook

# Discord para notificaciones
# DISCORD_BOT_TOKEN=tu_discord_bot_token
# DISCORD_GUILD_ID=tu_guild_id

# ===========================================
# REDIS (Para cache y sesiones)
# ===========================================
# REDIS_URL=redis://localhost:6379

# ===========================================
# EMAIL (Para invitaciones y notificaciones)
# ===========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=tu_email@gmail.com
# SMTP_PASS=tu_password_de_aplicacion
# FROM_EMAIL=noreply@silhouette-platform.com

# ===========================================
# WEBHOOKS Y NOTIFICACIONES
# ===========================================
# WEBHOOK_SECRET=tu_webhook_secret_para_validacion

# ===========================================
# LOGGING Y MONITOREO
# ===========================================
LOG_LEVEL=info
ENABLE_CORS=true
TRUST_PROXY=false

# ===========================================
# DESARROLLO
# ===========================================
DEBUG=silhouette:*
WATCH_FILES=true
AUTO_RELOAD=true

# ===========================================
# PRODUCCIÓN (Descomentar para producción)
# ===========================================
# NODE_ENV=production
# PORT=3001
# TRUST_PROXY=true
# LOG_LEVEL=warn
# WATCH_FILES=false
# AUTO_RELOAD=false